<div class="row justify-content-center">
    <div class="col-lg-6">
        <div class="card shadow-lg">
            <div class="card-header bg-success text-white">
                <h4 class="mb-0">
                    <i class="bi bi-check-circle-fill"></i> ¡Felicitaciones! <i class="bi bi-check-circle-fill"></i>
                </h4>
            </div>
            <div class="card-body text-center">
                <p class="lead mb-4">Se ha confirmado su reserva! <i class="bi bi-party-popper"></i></p>
                
                <div class="mb-4 text-start">
                    <p class="mb-1"><strong>Evento:</strong> {{evento.nombre}} - {{evento.codigo}}</p>
                    <p class="mb-1"><strong>Cantidad de Localidades:</strong> {{entrada.cantidadLocalidades}}</p>
                    <p class="mb-1"><strong>Precio Total:</strong> ${{precioTotal}}</p>
                </div>

                <div class="alert alert-success">
                    <i class="bi bi-envelope-check"></i> 
                    Pronto recibirá un email con la confirmación <i class="bi bi-envelope-heart"></i>
                </div>

                <div class="d-grid gap-2">
                    <a href="/entradas/{{entrada.id}}" class="btn btn-primary btn-lg">
                        <i class="bi bi-ticket-detailed"></i> Ver Mi Entrada
                    </a>
                    <a href="/mis-entradas" class="btn btn-outline-primary">
                        <i class="bi bi-ticket-perforated"></i> Mis Entradas
                    </a>
                    <a href="/" class="btn btn-outline-secondary">
                        <i class="bi bi-house"></i> Inicio
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
