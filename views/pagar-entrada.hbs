<div class="row justify-content-center">
    <div class="col-lg-6">
        <div class="card shadow-lg mb-4">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">Realiza el pago de tu reserva para confirmarla!</h4>
            </div>
            <div class="card-body">
                <p class="mb-3">
                    <strong>Evento:</strong> {{evento.nombre}} - {{evento.codigo}}
                </p>
                <p class="mb-3">
                    <strong>Cantidad de Localidades:</strong> {{entrada.cantidadLocalidades}}
                </p>
                <h4 class="mb-4">
                    <strong>Precio Total:</strong> 
                    <span class="text-success">${{precioTotal}}</span>
                </h4>

                <form action="/entradas/{{entrada.id}}/pagar" method="POST">
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-pagar btn-lg btn-confirmar-pago">
                            <i class="bi bi-wallet2"></i> Pagar con MercadoPago
                        </button>
                        <a href="/mis-entradas" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Cancelar
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
