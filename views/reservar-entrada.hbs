<div class="row justify-content-center">
    <div class="col-lg-6">
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">Realiza la compra de tus entradas!</h4>
            </div>
            <div class="card-body">
                <h5 class="mb-3">{{evento.nombre}} - {{evento.codigo}}</h5>
                
                <div class="alert alert-info mb-3">
                    <i class="bi bi-info-circle"></i> 
                    <strong>Disponibles:</strong> {{disponibles}} localidades
                </div>
                
                <form action="/eventos/{{evento.id}}/reservar" method="POST" id="formReserva">
                    <div class="mb-4">
                        <label for="cantidadLocalidades" class="form-label">
                            <strong>Cantidad de Localidades:</strong>
                        </label>
                        <input type="number" 
                               class="form-control" 
                               id="cantidadLocalidades" 
                               name="cantidadLocalidades" 
                               min="1" 
                               max="{{#if disponibles}}{{disponibles}}{{else}}0{{/if}}" 
                               value="{{#if disponibles}}1{{else}}0{{/if}}" 
                               required>
                        <div class="form-text">
                            MÃ¡ximo {{#if disponibles}}{{disponibles}}{{else}}0{{/if}} localidades disponibles
                        </div>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-success btn-lg" {{#unless disponibles}}disabled{{/unless}}>
                            <i class="bi bi-check-circle"></i> Confirmar Reserva
                        </button>
                        <a href="/eventos/{{evento.id}}" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Cancelar
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
